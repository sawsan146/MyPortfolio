@{
    ViewData["Title"] = "Contact";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    body {
        background-color: #f7f7f7;
        font-family: 'Arial', sans-serif;
    }

    .contact-section {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .contact-section h2 {
            font-size: 2.5rem;
            color: #007bff;
        }

        .contact-section p {
            color: #555;
            font-size: 1.1rem;
        }

    .social-links a {
        color: #007bff;
        font-size: 1.5rem;
        transition: color 0.3s ease;
    }

        .social-links a:hover {
            color: #0056b3;
        }

    .social-links li {
        margin-bottom: 10px;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 20px;
    }

        .social-links i {
            font-size: 2rem;
        }

    .contact-info {
        color: #333;
    }
</style>

<div class="container mt-5 contact-section">
    <h2 class="text-center">Contact Me</h2>
    <p class="text-center">Feel free to connect with me through the following social media links:</p>

    <div class="row">
        <div class="col-md-12 text-center">
            <ul class="social-links list-unstyled">
                <li><a href="mailto:sawsanelsebay2@gmail.com" target="_blank" title="Email"><i class="fas fa-envelope"></i></a></li>
                <li><a href="https://github.com/sawsan146" target="_blank" title="GitHub"><i class="fab fa-github"></i></a></li>
                <li><a href="https://www.linkedin.com/in/sawsan-abdelaziz146/" target="_blank" title="LinkedIn"><i class="fab fa-linkedin"></i></a></li>
                <li><a href="https://www.facebook.com/saw.san.77128" target="_blank" title="Facebook"><i class="fab fa-facebook"></i></a></li>
            </ul>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

