@{
    ViewData["Title"] = "Projects";
}

@model List<Project>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<br>
<br>
<table class="table table-striped table-bordered" style="background-color: rgba(82, 109, 121, 0.363);">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Project Title</th>
            <th scope="col">Description</th>
            <th scope="col">GitHub URL</th>
            <th scope="col">Skills</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var P in Model)
        {
            <tr>
                <td>@P.Id</td>
                <td>@P.ProjectTitle</td>
                <td style="max-width: 400px; white-space: pre-wrap;">
                    @P.Description
                </td>
                <td><a href="@P.GitHubUrl" target="_blank" class="text-decoration-none text-primary">View Project</a></td>
                <td>
                    <ul class="list-unstyled">
                        @foreach (var s in P.ProjectSkills)
                        {
                            <li class="d-inline-block me-2">
                                <span class="badge bg-secondary">@s.Skill.Name</span>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
