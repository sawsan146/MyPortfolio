@{
    ViewData["Title"] = "Skills";
}

@model List<Skill>

 <br> <br>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-striped table-bordered" style="background-color: rgba(82, 109, 121, 0.363);">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Skill Name</th>
            <th scope="col">Projects</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>
                    <ul class="list-unstyled">
                        @foreach (var p in s.ProjectSkills)
                        {
                            <li class="d-inline-block me-2">
                                <a href="@p.Project.GitHubUrl" target="_blank" class="badge bg-primary text-decoration-none text-white">
                                    @p.Project.ProjectTitle
                                </a>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
